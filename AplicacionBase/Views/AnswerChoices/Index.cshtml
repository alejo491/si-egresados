@model IEnumerable<AplicacionBase.Models.AnswerChoice>

@{
    ViewBag.Title = "Listar Opciones de Respuesta";
}

<h2>Opciones de Respuesta de la Pregunta "@ViewBag.Question.Sentence"</h2>

<div class="validation-summary-success">@TempData["Success"]</div>

<p>
    @Html.ActionLink("Crear Opcion de Respuesta", "Create", new { id = ViewBag.Question.Id })
</p>
<table>
    <tr>
        <th>
            Enunciado
        </th>
        <th>
            Valor Cuantitativo
        </th>
        <th>
           <center>Tipo</center> 
        </th>
        <th>
            Número de Orden 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
   
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sentence)
        </td>
        <td>
           @Html.DisplayFor(modelItem => item.NumericValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnswerNumber)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id}) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
        </td>
    </tr>
    
}

</table>
