@model AplicacionBase.Models.Company

@{
    ViewBag.Title = "Editar";
}

<h1>Editar</h1>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Información de la compañía</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            Nombre
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            Teléfono
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phone)
            @Html.ValidationMessageFor(model => model.Phone)
        </div>

        <div class="editor-label">
            Dirección
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>

        <div class="editor-label">
            E-Mail
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="editor-label">
           Ciudad
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.City)
            @Html.ValidationMessageFor(model => model.City)
        </div>

        <div class="editor-label">
            Sector
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Sector)
            @Html.ValidationMessageFor(model => model.Sector)
        </div>
        <br/>
        <p>
            <input type="submit" value="Actualizar" class="ebutton blue"/>&nbsp;
              @Html.ActionLink("Volver al Inicio", "Index", null, htmlAttributes: new { @class="ebutton blue"})
        </p>
    </fieldset>
}


