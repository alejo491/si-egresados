@model AplicacionBase.Models.File

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>File</legend>

    <div class="display-label">Imagen</div>
    <div class="preview">
        <a href=@Html.DisplayFor(model => model.Path)> <img alt="" src= @Html.DisplayFor(model => model.Path) height="200" width="200" /></a>
    </div>
    
    <div class="display-label">Nombre</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">Tipo</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Type)
    </div>

    <div class="display-label">Tamaño en KB</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Size)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Confimar Elimianción" class="ebutton blue"/> |
        @Html.ActionLink("Cancelar", "Regresar", new { id = Model.Id }, htmlAttributes: new { @class = "ebutton blue" })
    </p>
}