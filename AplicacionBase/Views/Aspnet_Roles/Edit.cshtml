@model AplicacionBase.Models.aspnet_Roles

@{
    ViewBag.Title = "Editar Rol";
}

<h2>Editar Rol</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Rol</legend>

        <div class="editor-label">
            @Html.HiddenFor(model => model.ApplicationId, "aspnet_Applications")
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.RoleId, "aspnet_Roles")
           
        </div>

      
        <div class="editor-field">
            @Html.HiddenFor(model => model.RoleId)
          
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RoleName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoleName)
            @Html.ValidationMessageFor(model => model.RoleName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LoweredRoleName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LoweredRoleName)
            @Html.ValidationMessageFor(model => model.LoweredRoleName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

         <div class="editor-label">
           
        </div>
         <div class="editor-label">
           
        </div>
        <p>
            <input type="submit" value="GUARDAR" class="ebutton2 blue" />&nbsp; @Html.ActionLink("Regresar al listado", "Index", routeValues: new { id = Model.RoleId }, htmlAttributes: new { @class = "ebutton blue" }) 
        </p>
    </fieldset>
}
