@model AplicacionBase.Models.aspnet_Roles

@{
    ViewBag.Title = "Editar Rol";
}
<div class="grid">
	<div class="c12">
    		<h2>Editar Rol</h2>
	</div>
	<div class="c12">
    	<div class="c9 first" id=”contenido”>

    		
	</div>
	<div class="c12">
    	<div class="c9 first" id=”contenido”>



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Rol</legend>

        <div class="editor-label">
            @Html.HiddenFor(model => model.ApplicationId, "aspnet_Applications")
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.RoleId, "aspnet_Roles")
           
        </div>

      
        <div class="editor-field">
            @Html.HiddenFor(model => model.RoleId)
          
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RoleName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoleName)
            <div class="alert error">
            @Html.ValidationMessageFor(model => model.RoleName)
            </div>
        </div>

        <div class="editor-field">
            @Html.HiddenFor(model => model.LoweredRoleName)
           
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            <div class="alert error">
            @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

         <div class="editor-label">
           
        </div>
         <div class="editor-label">
           
        </div>
        <p>
            <input type="submit" value="Guardar" class="ebutton2 blue" />&nbsp; @Html.ActionLink("Regresar al listado", "Index", routeValues: new { id = Model.RoleId }, htmlAttributes: new { @class = "ebutton blue" }) 
        </p>


       

      

    </fieldset>
}
 </div>

       <div class="c3 last" id=”layout”>@Html.Partial("_LayoutSeguridad")</div>

    </div>

