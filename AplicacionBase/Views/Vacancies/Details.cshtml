@model AplicacionBase.Models.Vacancy

@{
    ViewBag.Title = "Detalles";
}

<h1>Detalles</h1>

<fieldset>
    <legend>Información de la vacante</legend>

    <div class="display-label"><strong>Cargo ofrecido</strong></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Charge)
    </div>

    <div class="display-label"><strong>Jornada de trabajo</strong></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DayTrip)
    </div>

    <div class="display-label"><strong>Número de horas de la jornada de trabajo</strong></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.HoursNumber)
    </div>

    <div class="display-label"><strong>Perfil Profesional requerido</strong></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ProfessionalProfile)
    </div>

    <div class="display-label"><strong>Fecha de Publicación</strong></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PublicationDate)
    </div>

    <div class="display-label"><strong>Fecha de Cierre</strong></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ClosingDate)
    </div>

    <div class="display-label"><strong>Número de Vacantes ofrecidas</strong></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.VacanciesNumber)
    </div>

    <div class="display-label"><strong>Salario ofrecido</strong></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Salary)
    </div>

    <div class="display-label"><strong>Descripción</strong></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>

    <div class="display-label"><strong>Publicada por</strong></div>
    <div class="display-field">
         @Html.DisplayFor(model => model.User.FirstNames)
         @Html.DisplayFor(model => model.User.LastNames)
    </div>

    <div class="display-label"><strong>Compañía que ofrece la vacante</strong></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Company.Name)
    </div>
    <div class="display-label"><strong>Información de contacto de la compañía @Html.DisplayFor(model => model.Company.Name)</strong></div>
    <div class="display-field">
                Dirección: @Html.DisplayFor(model => model.Company.Address) - @Html.DisplayFor(model => model.Company.City)<br/>
                Teléfono: @Html.DisplayFor(model => model.Company.Phone)<br/>
                E-Mail: @Html.DisplayFor(model => model.Company.Email)</p>
    </div>
</fieldset>
<p>
    @Html.ActionLink("Editar", "Edit", new { id=Model.Id },htmlAttributes: new {@class="ebutton blue"})&nbsp;
    @Html.ActionLink("Volver a la lista", "Index", null, htmlAttributes: new { @class = "ebutton blue" })
</p>
