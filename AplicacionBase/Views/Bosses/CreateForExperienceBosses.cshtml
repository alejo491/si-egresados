@model AplicacionBase.Models.Boss

@{
    ViewBag.Title = "Registrar nuevo jefe";
    var wizard = ViewBag.WizardStep;
    if (wizard == 1)
    {
        Layout = "~/Views/Shared/_LayoutW.cshtml";
    }
}

<h2>Registrar nuevo jefe</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="contenido-izq">

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Información del Jefe</legend>
        <p>(*) Campos Obligatorios</p>
        <TABLE BORDER=0>
            <TR>
                <td>
                    <div class="editor-label">
                        Nombre (*)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </td>
            </TR>
            <tr>
                <td>
                    <div class="editor-label">
                        Correo Electrónico  (*)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        Teléfono de contacto
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.PhoneNumber)
                        @Html.ValidationMessageFor(model => model.PhoneNumber)
                    </div>
                </td>
        </tr>
        <tr>
        <td>
        <p>
            <input type="submit" value="Crear" class="ebutton blue" />&nbsp
             @Html.ActionLink("Volver", "../ExperiencesBosses/Create/" + Session["IdExperience"], new { wizardStep = wizard }, htmlAttributes: new { @class = "ebutton blue" })
        </p>
        </td>
        </tr>
    </TABLE>
    </fieldset>
}
</div>



