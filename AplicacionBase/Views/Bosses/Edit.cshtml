@model AplicacionBase.Models.Boss

@{
    ViewBag.Title = "Editar información del jefe";
}

<h2>Editar información del jefe</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Información del jefe</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            Nombre
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

         <div class="editor-label">
            E-Mail
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="editor-label">
            Teléfono
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PhoneNumber)
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </div>
        <br/>
        <p>
            <input type="submit" value="Actualizar" class="ebutton blue" />&nbsp
            @Html.ActionLink("Volver al Inicio", "Index",null, htmlAttributes: new { @class="ebutton blue"})
        </p>
    </fieldset>
}


