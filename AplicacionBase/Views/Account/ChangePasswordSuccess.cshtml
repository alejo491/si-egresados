@model AplicacionBase.Models.RegisterModel

@{
    ViewBag.Title = "Change Password";
}

<h2>Recuperar Contraseña</h2>
<p>
    Utilice este formulario para recuperar su contraseña. 
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="alert success">@TempData["Email"]</div>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "")
    <div>
        <fieldset>
            <legend>Digite la siguiente información</legend>
            <div></div>
            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
                <div class="alert success">@TempData["Error"]</div>      
            </div>
            <div>
                <input type="submit" value="Cambiar" class = "ebutton blue"/>
                <input type="button" value="Cancelar" onclick="history.go(-1)" class="ebutton blue" />
            </div>
        </fieldset>
    </div>
    }
