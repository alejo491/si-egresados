@model AplicacionBase.Models.Question

@{
    ViewBag.Title = "Crear Pregunta";
}

<h2>Crear Pregunta</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Pregunta</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdTopic, "Topic")
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdTopic", String.Empty)
            @Html.ValidationMessageFor(model => model.IdTopic)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Type)
        </div>
        <div class="editor-field">
            
            <br/>
            @Html.RadioButtonFor(model =>model.Type,"Unica",true) Unica Respuesta 
            @Html.RadioButtonFor(model =>model.Type,"Multiple",false) Multiple Respuesta
            @Html.RadioButtonFor(model =>model.Type,"Abierta",false) Respuesta Abierta
            @Html.RadioButtonFor(model =>model.Type,"Mixta",false) Respuesta Mixta
            @*@Html.EditorFor(model => model.Type)*@
            @Html.ValidationMessageFor(model => model.Type)
            <br/>
            <br/>

        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Sentence)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Sentence)
            @Html.ValidationMessageFor(model => model.Sentence)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.QuestionNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuestionNumber)
            @Html.ValidationMessageFor(model => model.QuestionNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsObligatory)

        </div>
        <div class="editor-field">
            <br/>
            @*@Html.EditorFor(model => model.IsObligatory)*@
            @Html.RadioButtonFor(model =>model.IsObligatory,0,true) Obligatorio
            @Html.RadioButtonFor(model =>model.IsObligatory,1,false) No Obligatoria
            @Html.ValidationMessageFor(model => model.IsObligatory)
            <br/>
            <br/>
        </div>

        <p>
            <input type="submit" value="Crear Pregunta" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Regresar al Listar", "Index")
</div>
