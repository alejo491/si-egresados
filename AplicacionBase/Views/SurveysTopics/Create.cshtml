@model AplicacionBase.Models.SurveysTopic

@{
	ViewBag.Title = "Asociar un tema";
}

<div class="c9">

<h2>Asociar un tema a la encuesta <strong><i>@ViewBag.survey.Name</i></strong></h2> <br />
@using (Html.BeginForm()) {
	@Html.ValidationSummary(true)
	<fieldset>
		<div class="editor-label">
			<h3> @Html.LabelFor(model => model.IdTopic, "Tema")</h3>
		</div>
		    <div class="editor-field">
		        @Html.DropDownList("IdTopic", String.Empty)            
		        @Html.ValidationMessageFor(model => model.IdTopic)
		        <div class="alert error">
		            @TempData["Error"]
		        </div>
		    </div>
            <br/>
		
		
		
		<div class="editor-label">
			<h3> @Html.LabelFor(model => model.TopicNumber)</h3>
		</div>
		    <div class="editor-field">
		        @Html.EditorFor(model => model.TopicNumber)
		         <div class="alert error">
                        <p> @Html.ValidationMessageFor(model => model.TopicNumber) </p>     
                <p> @TempData["Error2"] </p>
            </div>
		    </div>
            <br/>
		
		
	        <input type="submit" value="Guardar" class="ebutton2 blue"/> &nbsp;
		    @Html.ActionLink("Volver al listado", "Index", routeValues: new { id = ViewBag.survey.Id }, htmlAttributes: new { @class = "ebutton blue" })
	            
	</fieldset>
}
<br/>
</div>
