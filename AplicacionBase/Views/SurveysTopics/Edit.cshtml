@model AplicacionBase.Models.SurveysTopic
           

@{
    ViewBag.Title = "Editar Numero de tema";
}


<div class="grid">

    <div class="c12">

          <h2>Editar el numero de tema para la encuesta <strong><i>@ViewBag.survey.Name</i></strong></h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    </div>

    <div class="c12">

       <div class="c9 first" id=”contenido”>

           
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        
        <div class="editor-label">
            <h3>@Html.LabelFor(model => model.IdTopic, "Tema")   </h3>
        </div>
        <div class="editor-field">
            @ViewBag.topic.Description
             <div class="alert error">
            @Html.ValidationMessageFor(model => model.IdTopic)
            </div>
        </div>
        <br/>

        <div class="editor-label">
            <h3>@Html.LabelFor(model => model.TopicNumber)</h3>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TopicNumber)
            <div class="alert error">
           <p> @Html.ValidationMessageFor(model => model.TopicNumber)       </p>     
                <p> @TempData["Error2"] </p>
            </div>
        </div>
        <br/>

        <p>
            <input type="submit" value="Guardar" class="ebutton2 blue"/> &nbsp;
            @Html.ActionLink("Regresar al listado", "Index", routeValues: new { id = ViewBag.survey.Id }, htmlAttributes: new { @class = "ebutton blue" })
        </p>
    </fieldset>
}

       </div>

       <div class="c3 last" id=”layout”>@Html.Partial("_LayoutSideBar")</div>

    </div>

    &nbsp;
</div>

