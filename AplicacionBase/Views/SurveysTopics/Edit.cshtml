@model AplicacionBase.Models.SurveysTopic
           

@{
    ViewBag.Title = "Editar Numero de tema";
}

<div class="c9">

<h2>Editar el numero de tema para la encuesta <strong><i>@ViewBag.survey.Name</i></strong></h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        
        <div class="editor-label">
            <h3>@Html.LabelFor(model => model.IdTopic, "Tema")   </h3>
        </div>
        <div class="editor-field">
            @ViewBag.topic.Description
            @Html.ValidationMessageFor(model => model.IdTopic)
        </div>
        <br/>

        <div class="editor-label">
            <h3>@Html.LabelFor(model => model.TopicNumber)</h3>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TopicNumber)
            @Html.ValidationMessageFor(model => model.TopicNumber)
            <div class="validation-summary-errors">
                @TempData["Error2"]
            </div>
        </div>
        <br/>

        <p>
            <input type="submit" value="Guardar" class="ebutton2 blue"/> &nbsp;
            @Html.ActionLink("Regresar al listado", "Index", routeValues: new { id = ViewBag.survey.Id }, htmlAttributes: new { @class = "ebutton blue" })
        </p>
    </fieldset>
}

<div>
    
</div>
</div>