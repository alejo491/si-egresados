@model AplicacionBase.Models.SurveysTopic
           

@{
    ViewBag.Title = "Editar Numero de tema";
}

<h2>Editar el numero de tema para la encuesta <strong><i>@ViewBag.survey.Name</i></strong></h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Encuestas y temas</legend>

        <div class="editor-label">
            <strong> @Html.LabelFor(model => model.IdSurveys, "Encuesta") </strong>
        </div>
        <div class="editor-field">
            @ViewBag.survey.Name
            @Html.ValidationMessageFor(model => model.IdSurveys)
        </div>

        <div class="editor-label">
            <strong>@Html.LabelFor(model => model.IdTopic, "Tema")   </strong>
        </div>
        <div class="editor-field">
            @ViewBag.topic.Description
            @Html.ValidationMessageFor(model => model.IdTopic)
        </div>

        <div class="editor-label">
            <strong>@Html.LabelFor(model => model.TopicNumber)</strong>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TopicNumber)
            @Html.ValidationMessageFor(model => model.TopicNumber)
            <div class="validation-summary-errors">
                @TempData["Error2"]
            </div>
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Regresar al listado", "Index", routeValues: new {id = ViewBag.survey.Id})
</div>
