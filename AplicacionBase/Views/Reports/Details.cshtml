@model AplicacionBase.Models.Report

@{
    ViewBag.Title = "Details";
}

<h2>Detalles</h2>

<fieldset>
    <legend>Reporte</legend>

     <div class="display-label">
        <h3>Usuario</h3>
    </div>
    <div class="display-field">
          @ViewBag.nombre
    </div>

     <div class="display-label">
        <h3>Descripción</h3>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>

     <div class="display-label">
        <h3>Fecha Reporte</h3>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ReportDate)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Regresar", "Index", null, htmlAttributes: new { @class = "ebutton blue" })
</p>