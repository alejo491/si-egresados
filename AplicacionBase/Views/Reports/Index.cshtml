@model IEnumerable<AplicacionBase.Models.Report>

@{
    ViewBag.Title = "Index";
}

<div class="grid">
	<div class="c12">
    		<h2>Reportes</h2>
	</div>
	<div class="c12">
    	<div class="c9 first" id=”contenido”>
        	<div class="alert success">@TempData["Create"]</div>
<div class="alert success">@TempData["Update"]</div>
<div class="alert success">@TempData["Delete"]</div>

<p>
    @Html.ActionLink("Nuevo Reporte", "Create", null, htmlAttributes: new { @class = "ebutton blue"})
</p>

<p>
    @Html.ActionLink("Generar Reporte", "generar", null, htmlAttributes: new { @class = "ebutton blue"})
</p>
<table>
    <tr>
      
        <th>
            Descripción
        </th>
        <th>
            Fecha de Reporte
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
     
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReportDate)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, htmlAttributes: new { @class = "ebutton blue" }) &nbsp;
            @Html.ActionLink("Ver", "Details", new { id=item.Id }, htmlAttributes: new { @class = "ebutton blue" }) &nbsp;
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "ebutton blue" }) &nbsp;
            @Html.ActionLink("Vista previa informe", "Preview", new { id = item.Id }, htmlAttributes: new { @class = "ebutton blue" }) &nbsp;
            @Html.ActionLink("Crear Item survey", "Create", "ItemSurveys", new { id = item.Id }, htmlAttributes: new { @class = "ebutton blue" })&nbsp;
            @Html.ActionLink("Crear Item Datos", "Index", "ItemData", new { id = item.Id }, htmlAttributes: new { @class = "ebutton blue" }) &nbsp;
            


        </td>
    </tr>
}

</table>

    	</div>
    	<div class="c3 last" id=”layout”>@Html.Partial("_LayoutReports")</div>
	</div>
	&nbsp;
</div>




