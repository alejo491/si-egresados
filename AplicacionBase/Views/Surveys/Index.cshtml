@model IEnumerable<AplicacionBase.Models.Survey>

@{
    ViewBag.Title = "Index";
}

<h2>Encuesta</h2>

<div class="validation-summary-success">@TempData["Sucess"]</div>
<div class="validation-summary-updates">@TempData["Update"]</div>
<div class="validation-summary-remove">@TempData["Remove"]</div>




<p>
    @Html.ActionLink("Crear Nueva Encuesta", "Create")
</p>
<table>
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Objetivo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aim)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Agregar temas", "Index", "SurveysTopics", new {id = item.Id}, "")
            @Html.ActionLink("Enviar Encuesta", "Send", "SendSurveys", new {id = item.Id}, "")
        </td>
    </tr>
}

</table>
