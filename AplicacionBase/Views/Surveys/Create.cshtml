@model AplicacionBase.Models.Survey
@{
    ViewBag.Title = "Create";
}
<div class="grid">
    <h2>
        Crear Encuesta</h2>
    <div class="grid">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <div class="c12 first">
                    <p>
                        
                        <div class="display-label">
                            <h3>Nombre</h3></div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </p>
                </div>
                <div class="c12 first">
                    
                        <div class="display-label">
                           <h3> Objetivo</h3></div>
                        <div class="editor-field">
                           <p> @Html.EditorFor(model => model.Aim)
                            @Html.ValidationMessageFor(model => model.Aim)</p>
                        </div>
                    
                </div>
                <div class="c12 first">
                    <p>
                        <input type="submit" value="Crear" class="ebutton2 blue" />
                        &nbsp; @Html.ActionLink("Cancelar", "Index", null, htmlAttributes: new { @class = "ebutton blue" })
                    </p>
                </div>
            </fieldset>

        }
    </div>
</div>
