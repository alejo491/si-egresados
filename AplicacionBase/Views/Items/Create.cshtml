@model AplicacionBase.Models.Item

@{
     ViewBag.Title = "Crear Item del Reporte " + @ViewBag.Topic.Description;
}

<h2>Crear Item del Reporte <strong> <i>@ViewBag.Topic.Description </i></strong></h2>


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Items</legend>

    

        <div class="display-label">
           <h3>Nombre de la tabla</h3>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TableName)
            @Html.ValidationMessageFor(model => model.TableName)
        </div>

        <div class="display-label">
           <h3>Nombre del campo</h3>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FieldName)
            @Html.ValidationMessageFor(model => model.FieldName)
        </div>

        <div class="display-label">
           <h3>Número de página</h3>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PageNumber)
            @Html.ValidationMessageFor(model => model.PageNumber)
        </div>

        <p>
            <input type="submit" value="Crear Item" class="ebutton2 blue"/> &nbsp; @Html.ActionLink("Regresar", "Index", routeValues: new { id = ViewBag.Topic.Id }, htmlAttributes: new { @class = "ebutton blue" })
        </p>
    </fieldset>
}
