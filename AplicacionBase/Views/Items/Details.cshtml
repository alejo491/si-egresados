@model AplicacionBase.Models.Item

@{
    ViewBag.Title = "Details";
}

<div class="grid">
	<div class="c12">
    		<h2>Detalles</h2>
	</div>
	<div class="c12">
    	<div class="c9 first" id=”contenido”>
            
        <fieldset>
            <legend>Item</legend>

             <div class="display-label">
                <h3>Reporte</h3>
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Report.Description)
            </div>

             <div class="display-label">
                <h3>Nombre de la tabla</h3>
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.TableName)
            </div>

             <div class="display-label">
                <h3>Nombre del campo</h3>
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.FieldName)
            </div>

             <div class="display-label">
                <h3>Número de página</h3>
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.PageNumber)
            </div>
        </fieldset>
        <p>
            @Html.ActionLink("Regresar", "Index", routeValues: new { id = ViewBag.iddet }, htmlAttributes: new { @class = "ebutton blue" })
        </p>

    	</div>
    	<div class="c3 last" id=”layout”>@Html.Partial("_LayoutReports")</div>
	</div>
	&nbsp;
</div>




