@model PagedList.IPagedList<AplicacionBase.Models.Post> 
           

@{
    ViewBag.Title = "Noticias";
}

<h2>Gestor de Noticias</h2>

<form method="get" action="/Post/Search">
    <fieldset>
        <legend>Buscador de noticias: </legend>
        <div class="editor-field">
          Buscar noticias que contengan: @Html.TextBox("criteria", ViewBag.CurrentFilter as string)&nbsp<input type="submit" value="Buscar" class="ebutton blue" />   
        </div>
            
    </fieldset>
</form>


<p>
    @Html.ActionLink("Nueva Noticia", "Create")
</p>
<table>
    <tr>
        <th width = "150"  >
            Usuario
        </th>
        <th width = "150" >
            Título
        </th>
        <th >
            Resumen
        </th>
        <th width = "185">
            Fecha de Publicación
        </th>
        <th width = "130">
            Autorizado
        </th>
        <th width = "130">
            Principal
        </th>
        <th width = "190">
            Acciones
        </th>
        <th width = "130">
            Estado
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.User.FirstNames)
                @Html.DisplayFor(modelItem => item.User.LastNames)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td style="text-align: justify;">
                @Html.DisplayFor(modelItem => item.Abstract)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicationDate)
            </td>
            <td>
                <form name="formulario" action="" method="post">
                    <input type="checkbox" onclick="document.formulario.enviar.disabled=!document.formulario.enviar.disabled" value="acepto"/>
                    <input disabled="" type="submit" value="Aprobar" name="enviar"/>
                </form>
                @Html.DisplayFor(modelItem => item.Autorized)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Main)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estate)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btnedit", @title = "Editar" }) 
                @Html.ActionLink(" ", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btndetails", @title = "Detalles" })                
                @Html.ActionLink(" ", "", null, htmlAttributes: new { @class = "btnmore", @title = "Más" })
            </td>
            
        </tr>
    }
</table>

<div>
    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
    de @Model.PageCount
     
    @if (Model.HasPreviousPage)
    {
        @Html.ActionLink("<<", "Index", new { page = 1 })
        @Html.Raw(" ");
        @Html.ActionLink("< Anterior", "Index", new { page = Model.PageNumber - 1 })
    }
    else
    {
        @:<<
        @Html.Raw("   ");
        @:< Anterior
    }
     
    @if (Model.HasNextPage)
    {
        @Html.ActionLink("Siguiente>", "Index", new { page = Model.PageNumber + 1 })
        @Html.Raw(" ");
        @Html.ActionLink(">>", "Index", new { page = Model.PageCount })
    }
    else
    {
        @:Siguiente >
        @Html.Raw(" ")
        @:>>
    }
</div>

<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" 
type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/menu.js")" type="text/javascript"></script>