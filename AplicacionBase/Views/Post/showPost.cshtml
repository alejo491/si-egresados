@model ICollection<AplicacionBase.Models.Post> 

@{
    ViewBag.Title = "Detalles";
}
<script type="text/javascript"> 
    $(document).ready(function () {
        $.ajax({
            type : "POST",
            url :  "@(Url.Action("CarrucelImage", "File", new { id = Model.ElementAt(0).Id }))", 
            traditional : true,
            data : {}, 
            success : function(data){
                $("#carrucelshowpost").html(data); 
            }
        });  
    }) 
</script>
<div class="center">
    <div class="display-field">
    
        <div class="shownoticiatitle"><h2>@Html.DisplayFor(model => model.ElementAt(0).Title)</h2>
            <div></br>
                @if (Model.ElementAt(1).Autorized==0){@Html.ActionLink(" ", "Create", "Like", new { post = Model.ElementAt(0).Id }, htmlAttributes: new { @class = "ebutton btnlike" }) }
                @if (Model.ElementAt(1).Autorized==1){@Html.ActionLink(" ", "DeleteConfirmed", "Like", new { post = Model.ElementAt(0).Id, id = Model.ElementAt(1).Id }, htmlAttributes: new { @class = "ebutton btnnolike" }) }
                <div class ="left"> &nbsp&nbsp&nbsp @Model.ElementAt(1).Estate Usuarios les Gusta</div> </br></br></br>

                <div id="startbox" style = "margin-left :15px ">
                    <div class="startunselected" id="star1" onmouseover="hover(1)" onmouseout="unhover()" onclick="'"></div>
                    <div class="startunselected" id="star2" onmouseover="hover(2)" onmouseout="unhover()" onclick="calificar()"></div>
                    <div class="startunselected" id="star3" onmouseover="hover(3)" onmouseout="unhover()" onclick="calificar(3,   @Model.ElementAt(0).Id)"></div>
                    <div class="startunselected" id="star4" onmouseover="hover(4)" onmouseout="unhover()" onclick="calificar(4,   @Model.ElementAt(0).Id)"></div>
                    <div class="startunselected" id="star5" onmouseover="hover(5)" onmouseout="unhover()" onclick="calificar(5,   @Model.ElementAt(0).Id)"></div>
                </div>
                <div class ="left">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp  @Model.ElementAt(2).Estate De calificacion promedio</div> </br></br></br>
            </div>
        </div>
    </div>
    <div id="carrucelshowpost">
    
    </div>
    <br /><br />
    <div class="display-field" align="justify">
        <span style="color: black;">Contenido :</span> 
        @Html.DisplayFor(model => model.ElementAt(0).Content)
    </div>
    <div class="display-field">
        <span style="color: black;">Publicado por : </span>
        @Html.DisplayFor(model => model.ElementAt(0).User.FirstNames)
        @Html.DisplayFor(model => model.ElementAt(0).User.LastNames)
    </div>
    <div class="display-field">
        <span style="color: black;">Fecha de Publicación :</span> 
        @Html.DisplayFor(model => model.ElementAt(0).PublicationDate)
    </div>
    <div class="display-field">
        <span style="color: black;">Última Modificación :</span>
        @Html.DisplayFor(model => model.ElementAt(0).UpdateDate)
    </div>
</div>
<div id="numPostCarrucel" style="display:none">1</div>