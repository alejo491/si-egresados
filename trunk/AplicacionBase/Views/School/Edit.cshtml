@model AplicacionBase.Models.School

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Información de la Institución</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Institución</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div>
            <input type="submit" value="Guardar" class="ebutton blue"/>
        

    @Html.ActionLink("Regresar", "Index", "", htmlAttributes: new { @class = "ebutton blue" })
</div>
    </fieldset>
}

