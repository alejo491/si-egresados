@model IEnumerable<AplicacionBase.Models.Study>
 

@{
    ViewBag.Title = "Index";
    var wizard = ViewBag.WizardStep;
    //if ((string)Session["Wizard"] == "1")
        if (wizard == 1)
        {
            Layout = "~/Views/Shared/_LayoutW.cshtml";
        }
}

<h2>Estudios Realizados</h2>
@{
    var i = ViewBag.UserId;   
}
<p>
    @Html.ActionLink("Agregar Estudio", "Create", new { id = @i, wizard }, htmlAttributes: new { @class = "ebutton blue" }) &nbsp
    @Html.ActionLink("Regresar", "Begin","User", new { id = @i, wizard }, htmlAttributes: new { @class = "ebutton blue" }) &nbsp
</p>
<table>
    <tr>
        <th>
            Institución
        </th>
        <th>
            Título
        </th>
        <th>
            Fecha de Inicio
        </th>
        <th>
            Fecha de Finalización
        </th>
         <th>
            Opciones
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.School.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            <div class = " left "> @Html.ActionLink(" ", "Edit", new { id = item.Id , idUser = @i }, htmlAttributes: new { @class = "btnedit", title = "Editar Estudio" }) &nbsp</div>
            
            <div class = " left "> @Html.ActionLink("Editar", "Edit", new { id = item.Id, idUser = @i }) |&nbsp</div>

            <div class = " left "> @Html.ActionLink(" ", "Details", new { id = item.Id, idUser = @i }, htmlAttributes: new { @class = "btndetails", title = "Ver Estudio" }) &nbsp</div>
            <div class = " left "> @Html.ActionLink("Ver", "Details", new { id = item.Id, idUser = @i }) |&nbsp</div>

            <div class = " left "> @Html.ActionLink(" ", "Delete", new { id = item.Id, idUser = @i }, htmlAttributes: new { @class = "btndelete", title = "Borrar Estudio" }) &nbsp</div>
            <div class = " left "> @Html.ActionLink("Eliminar", "Delete", new { id = item.Id, idUser = @i }) &nbsp</div>
        </td>
    </tr>
}

</table>

