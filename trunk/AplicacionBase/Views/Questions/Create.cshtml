            @Html.ValidationMessageFor(model => model.IdTopic)
        </div>
        *@
        <div class="editor-label">
            @Html.LabelFor(model => model.Type)
        </div>
        <div class="editor-field">
            
            <p>
            @Html.RadioButtonFor(model =>model.Type,"Unica",true) Unica Respuesta <br/>
