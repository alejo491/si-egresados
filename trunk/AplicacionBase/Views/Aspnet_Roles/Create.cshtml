@model AplicacionBase.Models.aspnet_Roles

@{
    ViewBag.Title = "Crear Rol";
}
<div class="grid">

    <div class="c12">

           
       <h2>Crear Rol</h2>

 

    </div>

    <div class="c12">

       <div class="c9 first" id=”contenido”>




<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Rol</legend>

    

        <div class="editor-label">
            @Html.LabelFor(model => model.RoleName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoleName)
            <div class="alert error">
            @Html.ValidationMessageFor(model => model.RoleName)
            </div>
            
        </div>

        
        <div class="editor-field">
            @Html.HiddenFor(model => model.LoweredRoleName)
        
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            <div class="alert error">
            @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        <div class="editor-label">
          
        </div>
         <div class="editor-label">
          
        </div>
        <p>
            <input type="submit" value="Crear" class = "ebutton blue"/> @Html.ActionLink("Regresar al Listado", "Index", "", htmlAttributes: new { @class = "ebutton blue" })
        </p>
    </fieldset>
}



	</div>
    	<div class="c3 last" id=”layout”>@Html.Partial("_LayoutSeguridad")</div>
	</div>
	&nbsp;
</div>

