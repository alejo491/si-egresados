@model IEnumerable<AplicacionBase.Models.AnswerChoice>

@{
    ViewBag.Title = "Listar Opciones de Respuesta";
}

<h2>Opciones de Respuesta de la Pregunta</h2>
<h3>@ViewBag.Question.Sentence</h3>

<p>
    @Html.ActionLink("Crear Opcion de Respuesta", "Create", new { oid = ViewBag.Question.Id })
</p>
<table>
    <tr>
        <th>
            Enunciado
        </th>
        <th>
            Valor Cuantitativo
        </th>
        <th>
           <center>Tipo</center> 
        </th>
        <th>
            Número de Orden
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
   
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sentence)
        </td>
        <td>
           <center>@Html.DisplayFor(modelItem => item.NumericValue)</center> 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            <center>@Html.DisplayFor(modelItem => item.AnswerNumber)</center>
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
        </td>
    </tr>
    
}

</table>
