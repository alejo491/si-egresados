@model AplicacionBase.Models.Item

@{
    ViewBag.Title = "Edit";
}

<div class="grid">
	<div class="c12">
    		<h2>Editar</h2>
	</div>
	<div class="c12">
    	<div class="c9 first" id=”contenido”>
        	
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

        @using (Html.BeginForm()) {
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>Item</legend>

                @Html.HiddenFor(model => model.Id)


                <div class="display-label">
                    <h3>Nombre de la tabla</h3>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.TableName)
                    @Html.ValidationMessageFor(model => model.TableName)
                </div>

                <div class="display-label">
                    <h3>Nombre del campo</h3>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.FieldName)
                    @Html.ValidationMessageFor(model => model.FieldName)
                </div>

                <div class="display-label">
                    <h3>Número de página</h3>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.PageNumber)
                    @Html.ValidationMessageFor(model => model.PageNumber)
                </div>

                <p>
                    <input type="submit" value="Guardar" class="ebutton2 blue"/> &nbsp; 

                    @Html.ActionLink("Regresar", "Index", routeValues: new { id = ViewBag.idrep}, htmlAttributes: new { @class = "ebutton blue" })

                </p>
            </fieldset>
        }

    	</div>
    	<div class="c3 last" id=”layout”>@Html.Partial("_LayoutReports")</div>
	</div>
	&nbsp;
</div>






