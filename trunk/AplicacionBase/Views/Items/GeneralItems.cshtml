@model IEnumerable<AplicacionBase.Models.ViewModels.ItemReportViewModel>

@{
    ViewBag.Title = "Listado General de Items";
}

<h2>Listado General de Items</h2>
<div>
    @Html.ActionLink("Crear Item survey", "Create", "ItemSurveys", new { id = ViewBag.IdReport }, htmlAttributes: new { @class = "ebutton blue" })&nbsp;
    @Html.ActionLink("Crear Item Datos", "Create", "ItemData", new { id = ViewBag.IdReport }, htmlAttributes: new { @class = "ebutton blue" }) &nbsp;
</div>
 <div>

                                                                                       
 </div>
 <div class="alert success">
            @TempData["Success"]
        </div>

<table>
    <tr>
        <th>
            Reporte
        </th>
        <th>
            Descripción
        </th>
        <th>
            Tipo de grafico
        </th>
        
       <th>
            Acciones
        </th>
    </tr>
    

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Reporte)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sentence)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GraphicType)
        </td>
      
        <td>
            @if(item.DataNumber == 0)
            {
                @Html.ActionLink("Eliminar", "Delete", "ItemSurveys", new { id = item.Id }, htmlAttributes: new { @class = "ebutton blue" }) 
            }
            @if(item.DataNumber == 1)
            {
                @Html.ActionLink("Eliminar", "Delete", "ItemData", new { id = item.Id }, htmlAttributes: new { @class = "ebutton blue" }) 
            }
            
        </td>
    </tr>
}

</table>

@Html.ActionLink("Regresar al listado de reportes", "Index", "Reports", new { id = ViewBag.IdReport }, htmlAttributes: new { @class = "ebutton blue" })