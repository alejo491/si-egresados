@model IEnumerable<AplicacionBase.Models.Experience>

@{
    ViewBag.Title = "Listado de Experiencias Laborales";
}
<h2>Experiencias Laborales</h2>

<p>
    @Html.ActionLink("Crear Nueva Experiencia", "Create",null, htmlAttributes: new { @class = "ebutton blue" })
</p>
<table>
    <tr>
        <th>
            Nombre Compañia
        </th>
        <th>
            Cargo
        </th>
        <th>
            Fecha Inicio
        </th>
        <th>
            Fecha Finalización
        </th>
        <th>
            Descripción
        </th>       
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Company.Name)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Charge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Ver", "Details", new { id = item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
