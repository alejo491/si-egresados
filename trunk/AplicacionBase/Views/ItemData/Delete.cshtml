@model AplicacionBase.Models.ItemData

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar</h2>

<h3>Seguro que desea Eliminar este Item?</h3>

<fieldset>
    <legend><h2>Item de Base de Datos</h2></legend>

    <div class="display-label"><h2>Reporte</h2></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Report.Description)
    </div>

    <div class="display-label"><h2>Descripción</h2></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Sentence)
    </div>

    <div class="display-label"><h2>Tipo de Gráfico</h2></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.GraphicType)
    </div>

    

    
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Eliminar" class="ebutton2 blue"/>   
        @Html.ActionLink("Regresar al Listado", "Index", new { id = Model.IdReport }, htmlAttributes: new { @class = "ebutton blue" })
    </p>
}
