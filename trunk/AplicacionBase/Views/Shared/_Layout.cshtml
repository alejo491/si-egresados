@using ClientDependency.Core
@using ClientDependency.Core.Mvc
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/carrucel.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/startbox.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/postscript.js")" type="text/javascript"></script>
        <script type="text/javascript">
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-38011618-1']);
            _gaq.push(['_trackPageview']);

            (function () {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
        </script>
        <!-- For Date picker only --> 
        <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
    

    @MvcHtmlString.Create(Html.RenderCssHere(new List<IClientDependencyPath>
												{
													new BasicPath("Base", "~/Content/themes/base"),
													new BasicPath("Content", "~/Content")
												}))

	@MvcHtmlString.Create(Html.RenderJsHere(new List<IClientDependencyPath>
											   {
												   new BasicPath("Scripts", "~/Scripts"),
												   new BasicPath("googleCDN", "http://ajax.googleapis.com/ajax/libs/"),
												   new BasicPath("Content", "~/Content")
												   
											   }))

	@{
		Html.RequiresCss("Site.css", "Content", 1);
	}
</head>
<body>
    <div id="Maqueta">
        <div id="izquierda">
            <img src="/Content/themes/base/images/izq.gif"/>
        </div>        
        <div id="page">
            <div id="cabecera">
                <div id="header">
                    <div id = "superior">
                        <div id="logindisplay">
                            @Html.Partial("_LogOnPartial")
                        </div>
                        <div id="msg_sistema">
                            SISTEMA DE INFORMACION EGRESADOS PIS
                        </div>
                    </div>

                </div>
                <div id="menucontainer">
                        <div id="menuizq">
                            <div id="menuder">
                                <ul id="menu">
                                    <li class="first">@Html.ActionLink("Inicio", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Perfil", "Redirect", "Verify")</li>
                                    <li>@Html.ActionLink("Noticias", "GlobalIndex", "Post")</li>
                                    <li>@Html.ActionLink("Encuestas","Index", "Surveys")</li>
                                    <li>@Html.ActionLink("Reportes","Index", "Reports")</li>
                                    <li>@Html.ActionLink("Bolsa de Empleo","Index", "Vacancies")</li>
                                    <li class="end">@Html.ActionLink("Acerca De", "About", "Home")</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    </div>
            <div id="contenido">
   
                <div id="main"> 

                    <div id="BreadCrumbs">
                         @Html.MvcSiteMap().SiteMapPath()
                    </div>    
                            
                    @RenderBody()
                </div> 
                 
            </div> 
            <div id="footer">
                <img src="/Content/themes/base/images/sep-logo-unicauca.gif"/>
            </div>                    
        </div>       
        <div id="derecha">
            <img src="/Content/themes/base/images/der.gif"/>
        </div>         
    </div>    
</body>
</html>
