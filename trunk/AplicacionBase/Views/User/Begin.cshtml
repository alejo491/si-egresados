@model AplicacionBase.Models.User
@using AplicacionBase.Controllers

@{
    ViewBag.Title = "Perfil de Usuario";
    VerifyController ver = new VerifyController();
    var i = ver.Begin(Model.Id);
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
   <Fieldset> 
    <div class="grid">
        <div class="c12">
            <div class="c9 first">
                <h2>Perfil Personal del Usuario: @Model.aspnet_Users.UserName</h2>
                <div class="alert success">@TempData["NewPassword"]</div>     
            </div>
             
            @if (i == true)
            {
              <div class="c3 first" id="layout1">
                  @Html.Partial("_LayoutUser")
                  @Html.Partial("_LayoutSeguridad") 
              </div>
            }
            else
            {
                <div class="c3 last" id="layout">@Html.Partial("_LayoutUser")</div>         
            }
            
        </div>   
    </div>
    </Fieldset>

