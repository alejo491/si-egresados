@model IEnumerable<AplicacionBase.Models.Topic>

@{
    ViewBag.Title = "Temas";
    int rowIndex = 0;
}

<h2>Temas</h2>

<div class="validation-summary-success">@TempData["Create"]</div>
<div class="validation-summary-updates">@TempData["Update"]</div>
<div class="validation-summary-remove">@TempData["Delete"]</div>

<p>
    @Html.ActionLink("Nuevo Tema", "Create")
</p>
<table>
    <tr class="head">
        <th>
            Descripcion
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {

    if (rowIndex % 2 == 0) {
        @:<tr class="alt">
    } else { 
        @:<tr> 
    }
    
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Ver", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Crear Preguntas", "Index", "Questions", new { id=item.Id }, "")
        </td>
    @:</tr>
    rowIndex++;
}

</table>
