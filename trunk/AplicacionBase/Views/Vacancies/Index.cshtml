@model IEnumerable<AplicacionBase.Models.Vacancy>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Charge
        </th>
        <th>
            DayTrip
        </th>
        <th>
            HoursNumber
        </th>
        <th>
            ProfessionalProfile
        </th>
        <th>
            PublicationDate
        </th>
        <th>
            ClosingDate
        </th>
        <th>
            VacanciesNumber
        </th>
        <th>
            Salary
        </th>
        <th>
            User
        </th>
        <th>
            Company
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Charge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DayTrip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoursNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProfessionalProfile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublicationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClosingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VacanciesNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
