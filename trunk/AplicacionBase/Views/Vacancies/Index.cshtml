@model IEnumerable<AplicacionBase.Models.Vacancy>

@{
    ViewBag.Title = "Listado de Vacantes";
}

<h2>Listado de Vacantes</h2>

Buscar en Vacantes <input type='text' name='Buscar' size='60' /> @Html.ActionLink("Buscar", "Create", null, htmlAttributes: new { @class = "ebutton blue" })

<br/>
<p>
    @Html.ActionLink("Crear Nueva", "Create", null, htmlAttributes: new { @class = "ebutton blue" })
</p>
<table>
    <tr>
        <th>
            Cargo
        </th>
        <th>
            Jornada
        </th>
        <th>
            Numero de Horas
        </th>
        <th>
            Perfil Profesional
        </th>
        <th>
            Fecha de Publicación
        </th>
        <th>
            Fecha de Cierre
        </th>
        <th>
            Numero de Vacantes
        </th>
        <th>
            Salario
        </th>
        <th>
            Usuario
        </th>
        <th>
            Compañia
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Charge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DayTrip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoursNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProfessionalProfile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublicationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClosingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VacanciesNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company.Name)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
