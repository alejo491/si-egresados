@model AplicacionBase.Models.SurveysTopic

@{
    ViewBag.Title = "Asociar un tema";
}

<h2>Asociar un tema a la encuesta <strong><i>@ViewBag.survey.Name</i></strong></h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Asociar tema</legend>

        <div class="editor-label">
            <strong>@Html.LabelFor(model => model.IdSurveys, "Encuesta")</strong>
        </div>
        <div class="editor-field">
            @ViewBag.survey.Name
            
        </div>

        <div class="editor-label">
            <strong> @Html.LabelFor(model => model.IdTopic, "Tema")</strong>
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdTopic", String.Empty)            
            @Html.ValidationMessageFor(model => model.IdTopic)
            <div class="validation-summary-errors">
                @TempData["Error"]
            </div>
        </div>

        <div class="editor-label">
            <strong> @Html.LabelFor(model => model.TopicNumber)</strong>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TopicNumber)
            @Html.ValidationMessageFor(model => model.TopicNumber)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al listado", "Index", routeValues: new { id = ViewBag.survey.Id })
</div>
