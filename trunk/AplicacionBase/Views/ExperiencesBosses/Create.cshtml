@model AplicacionBase.Models.ExperiencesBoss

@{
    ViewBag.Title = "Crear";
}

<h2>Crear</h2>


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>



@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Jefe Directo</legend>

        <div class="editor-label">
            Jefe 
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdBoss", String.Empty)
            @Html.ValidationMessageFor(model => model.IdBoss)
        </div>

        <div class="editor-label">
            Chargo
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdExperiences", String.Empty)
            @Html.ValidationMessageFor(model => model.IdExperiences)
        </div>

        <div class="editor-label">
            Fecha Inicio
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.StartDate, new { id = "startDate", @Value = @DateTime.Now })
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>

        <div class="editor-label">
            Fecha fin
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.EndDate, new { id = "endDate", @Value = @DateTime.Now })
            @Html.ValidationMessageFor(model => model.EndDate)
        </div>
        
        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#startDate").datepicker({ dateFormat: 'dd/mm/yy' });
        });

        $(document).ready(function () {
            $("#endDate").datepicker({ dateFormat: 'dd/mm/yy' });
        });
    </script>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>
