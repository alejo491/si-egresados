@model AplicacionBase.Models.Report

@{
    ViewBag.Title = "Edit";
}

<div class="grid">
	<div class="c12">
        <h2>Editar</h2>
	</div>
	<div class="c12">
    	<div class="c9 first" id=”contenido”>
        	
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

        @using (Html.BeginForm()) {
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>Reporte</legend>

                <div class="display-label">
                   <h3>Descripción</h3>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>

    
                <p>
                     <input type="submit" value="Guardar" class="ebutton2 blue"/> &nbsp; 

                    @Html.ActionLink("Regresar", "Index", null, htmlAttributes: new { @class = "ebutton blue" })


                </p>
            </fieldset>
        }

    	</div>
    	<div class="c3 last" id=”layout”>@Html.Partial("_LayoutReports")</div>
	</div>
	&nbsp;
</div>



