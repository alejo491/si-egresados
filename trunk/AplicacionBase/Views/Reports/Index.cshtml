@model IEnumerable<AplicacionBase.Models.Report>

@{
    ViewBag.Title = "Index";
}

<h2>Reportes</h2>

<div class="alert success">@TempData["Create"]</div>
<div class="alert success">@TempData["Update"]</div>
<div class="alert success">@TempData["Delete"]</div>

<p>
    @Html.ActionLink("Nuevo Reporte", "Create", null, htmlAttributes: new { @class = "ebutton blue"})
</p>
<table>
    <tr>
      
        <th>
            Descripción
        </th>
        <th>
            Fecha de Reporte
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
     
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReportDate)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, htmlAttributes: new { @class = "ebutton blue" }) &nbsp;
            @Html.ActionLink("Ver", "Details", new { id=item.Id }, htmlAttributes: new { @class = "ebutton blue" }) &nbsp;
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "ebutton blue" }) &nbsp;
            @Html.ActionLink("Crear Item", "Index", "Items", new { id = item.Id }, htmlAttributes: new { @class = "ebutton blue" })

        </td>
    </tr>
}

</table>
